{
  "name": "@gz/monorepo",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://gxkai.github.io/gz/",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "start:apps": "turbo run start --parallel --filter='./apps/*'",
    "start:vite-app": "turbo run start --filter vite-app",
    "start:nuxt-app": "turbo run start --filter nuxt-app",
    "start:storybook": "turbo run start --filter storybook",
    "lint": "turbo run lint",
    "test": "turbo run test --filter vitest",
    "test:watch": "vitest -w --dir",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "simple-git-hooks",
    "release": "tsx scripts/release.ts"
  },
  "devDependencies": {
    "@types/prompts": "2.4.1",
    "@types/semver": "7.3.13",
    "@gz/eslint-config-custom": "workspace:*",
    "conventional-changelog-cli": "2.2.2",
    "execa": "6.1.0",
    "picocolors": "1.0.0",
    "prettier": "2.7.1",
    "prompts": "2.4.2",
    "semver": "7.3.8",
    "simple-git-hooks": "2.8.1",
    "tsx": "3.11.0",
    "turbo": "1.6.2",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=10",
    "pnpm": ">=3"
  },
  "simple-git-hooks": {
    "pre-push": "pnpm lint",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "packageManager": "pnpm@7.14.1",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": ["@types/react"],
      "allowedVersions": {
        "vite": "3"
      }
    }
  }
}
