{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "assets": [
        "assets"
      ],
      "public": [
        "public"
      ],
      "@ui": [
        "../../packages/ui/src"
      ],
      "@ui/*": [
        "../../packages/ui/src/*"
      ],
    }
  }
}
